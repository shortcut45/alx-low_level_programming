#include "main.h"

/**
 * print_diagonal - prints lines in a diagonal view
 * @n: diagonal parameter
 * Description: print_diagonal prints lines in diagonal view
 * Return: diagonal
 */

void print_diagonal(int n)
{
	int x = 1;

	if (n < 0)
	{
		for (x = 0; x < n; x++)
		{
			_putchar('');
		}
		_putchar('\\');
		_putchar('\n');
	}
	else
	{
		_putchar('\n');
	}
}
